<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Workout Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textSize="24sp"
        android:padding="8dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter workout name"
        android:padding="16dp"
        android:minHeight="48dp" />

    <!-- Workout Type -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Type"
        android:textSize="18sp"
        android:paddingTop="8dp" />

    <RadioGroup
        android:id="@+id/radio_group_workout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio" />

        <RadioButton
            android:id="@+id/weightLifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Lifting" />
    </RadioGroup>

    <!-- Cardio Fields (Distance and Duration) -->
    <LinearLayout
        android:id="@+id/cardio_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration (minutes)"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/input_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter duration"
            android:inputType="number"
            android:padding="16dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance (km)"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/input_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter distance"
            android:inputType="number"
            android:padding="16dp"
            android:minHeight="48dp" />
    </LinearLayout>

    <!-- Weightlifting Fields (Sets, Reps, and Weight) -->
    <LinearLayout
        android:id="@+id/weight_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/input_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter weight"
            android:inputType="number"
            android:padding="16dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sets"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/input_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter sets"
            android:inputType="number"
            android:padding="16dp"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/input_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter reps"
            android:inputType="number"
            android:padding="16dp"
            android:minHeight="48dp" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".WorkoutCreationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Workout Routine"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/label_workout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Type"
        android:textSize="18sp"
        android:padding="8dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Cardio" />

        <RadioButton
            android:id="@+id/weightLifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Weight Lifting" />
    </RadioGroup>

    <TextView
        android:id="@+id/label_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter workout name"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/label_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration (minutes)"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter duration"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/label_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance (km)"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter distance"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/label_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Weight"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/label_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter sets"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <TextView
        android:id="@+id/label_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reps"
        android:textSize="18sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/input_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reps"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/button_save_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Workout"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"/>
</LinearLayout>
